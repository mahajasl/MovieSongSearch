@page
@model MovieSongSearch.Pages.MovieModel
@using MovieDatabase;
@{
    int counter = 0;
}
<head>
    <link rel="stylesheet" href="~/css/Movie.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope&display=swap" rel="stylesheet" />
</head>

<div>
    <img src="~/CompanyLogo.PNG" alt=" Black and white movie clapper with a quarter note floating in the bottom section of the clapper" />

</div>


<div class="text-center">
    <div class="row">
        <div class="col">
            <h3> MovieSongSearch Presents Movie Search</h3>
            <form action="" method="get" class="form-inline">
                <input asp-for="Query" name="query" id="query" class="form-control mr-sm-2 mb-2" placeholder="Movie Title" />
                <button type="submit" class="btn btn-primary mb-2">Search</button>

            </form>
        </div>
    </div>
    <div class="container marketing">
        @if (Model.SearchCompleted)
        {
            @foreach (Result r in Model.movies.Results)
            {

                <hr class="featurette-divider">

                <div class="row featurette">
                    <div>
                        <h4>@r.Title</h4>
                        <p class="lead">@r.ReleaseDate</p>
                        <p class="lead">@r.Overview</p>

                    </div>
                </div>
                counter++;
                if (counter == 5)
                {
                    break;
                }
            }

        }
    </div>
</div>
<style>
    body {
        background-color: #C6011F;
        color: #F8F8FF;
    }
    a {
        color: #F8F8FF;
        text-decoration: none;
    }
    a:hover {
        color: black;
    }
    footer {
        background-color: #F7F7F7;
    }
    .form-control {
        text-align: center;
        align-items: center;
        margin: 20px;
        padding: 20px;
    }

    form {
        margin: 0 auto;
        padding-left: 10rem;
    }
</style>