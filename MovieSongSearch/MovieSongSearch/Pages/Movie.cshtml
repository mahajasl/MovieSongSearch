@page
@model MovieSongSearch.Pages.MovieModel
@using MovieDatabase;
@{
    int counter = 0;
}
<div class="text-center">

    <div class="row">
        <div class="col">
            <form action="" method="get" class="form-inline">
                <input asp-for="Query" name="query" id="query" class="form-control mr-sm-2 mb-2" placeholder="search for movies" />
                <button type="submit" class="btn btn-primary mb-2">Search</button>

            </form>
        </div>
    </div>
    <div class="container marketing">
        @if (Model.SearchCompleted)
        {
            @foreach (Result r in Model.movies.Results)
            {

                <hr class="featurette-divider">

                <div class="row featurette">
                    <div>
                        <h4>@r.Title</h4>
                        <p class="lead">@r.ReleaseDate</p>
                        <p class="lead">@r.Overview</p>

                    </div>
                </div>
                counter++;
                if (counter == 5)
                {
                    break;
                }
            }

        }
    </div>
</div>