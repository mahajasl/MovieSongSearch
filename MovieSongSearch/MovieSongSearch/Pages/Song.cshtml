@page
@model MovieSongSearch.Pages.SongModel
@using SongDatabase;
@{
    int counter = 0;
}

<head>
    <link rel="stylesheet" href="~/css/Song.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
    <link rel="stylesheet" href="~/css/print.css" type="text/css" media="print" />
    <link rel="stylesheet" href="~/css/mobile.css" type="text/css" media="screen and (max-device-width: 480px)" />

</head>

<div class="text-center">
    <h2>
        Search for songs and different sountracks from various artists here!
    </h2>
</div>


    
            <form action="" method="get" class="form-inline">
                <input asp-for="Query" name="query" id="query" class="form-control mr-sm-2 mb-2" placeholder="Search for Music" />
    <button type="submit" class="btn btn-primary mb-2">Search</button>
            </form>
        



<div>
    @if (Model.SearchCompleted)
    {
        @foreach (Result r in Model.songs.Results)
        {
            
            <hr class="featurette-divider">
            <div class="row featurette" id="results">
                <div>
                    <div style="float:right">
                        <div class="col-sm-10">
                            <p class="lead"><img src="@r.ArtworkUrl100" alt="@r.ArtistName/@r.CollectionName Photo" /></p>
                        </div>
                    </div>
                    <dl class="row">
                        
                            <dt class="col-sm-2">
                                Artist :
                            </dt>
                            <dd class="col-sm-5">
                                @r.ArtistName
                            </dd>
                        
                    </dl>
                    <dl class="row">
                        
                            <dt class="col-sm-2">
                                Collection Name :
                            </dt>
                            <dd class="col-sm-5">
                                @r.CollectionName
                            </dd>
                        
                    </dl>
                    <dl class="row">
                        
                            <dt class="col-sm-2">
                                Track :
                            </dt>
                            <dd class="col-sm-5">
                                @r.TrackName
                       
                    </dl>
                    <dl class="row">
                        
                            <dt class="col-sm-2">
                                Genre : 
                            </dt>
                            <dd class="col-sm-4">
                                @r.PrimaryGenreName
                            </dd>
                        
                      </dl>
                    <dl class="row">
                            <dd class="col-sm-3" id = "links">
                                <p class="lead"><em><u><a href="@r.ArtistViewUrl" target="_blank">Know more about Artist</a></u></em></p>
                                <p class="lead"><em><u><a href="@r.CollectionViewUrl" target="_blank">View Collection</a></u></em></p>
                            </dd>
                        
                    </dl>
                    
                </div>
            </div>
            counter++;
            if (counter == 5)
            {
                break;
            }
        }

    }
</div>